@model mvc.Models.Calculator

@{
    ViewData["Title"] = "Calculator";
}

<div class="calculator-container">
    <h1 class="calculator-heading">Calculator</h1>

    <div class="calculator-inputs">
        <input class="calculator-input" asp-for="Operator1" type="number" required>
        <input class="calculator-input" asp-for="Operator2" type="number" required>
    </div>

    <div class="calculator-actions">
        <button class="calculator-button" value="+" onclick="setAction('+')">+</button>
        <button class="calculator-button" value="-" onclick="setAction('-')">-</button>
        <button class="calculator-button" value="*" onclick="setAction('*')">*</button>
        <button class="calculator-button" value="/" onclick="setAction('/')">/</button>
        <button class="calculator-button" onclick="calculate()">Calculate</button>
    </div>

    <div class="calculator-result">
        <label>@Html.DisplayNameFor(model => model.Answer)</label>
        <span class="calculator-output">@Html.DisplayFor(model => model.Answer)</span>
    </div>
</div> 
